<Window x:Class="Prog6221_POE.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog6221_POE"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Center" Height="98" Margin="0,88,0,0" TextWrapping="Wrap" Text="Type here" VerticalAlignment="Top" Width="500" x:Name="userInput"/>
        <TextBlock HorizontalAlignment="Center" Height="92" Margin="0,239,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="500" x:Name="responseBox"/>
        <Label Content="Your input:" HorizontalAlignment="Left" Height="31" Margin="10,88,0,0" VerticalAlignment="Top" Width="119" FontWeight="Bold"/>
        <Label Content="Response:" HorizontalAlignment="Left" Height="31" Margin="10,267,0,0" VerticalAlignment="Top" Width="119" FontWeight="Bold"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="189,201,0,0" VerticalAlignment="Top" Width="83" Height="22" x:Name="submitBtn" Click="submitBtn_Click"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="620,364,0,0" VerticalAlignment="Top" Width="83" Height="22" x:Name="closeBtn" Click="closeBtn_Click"/>

    </Grid>
</Window>
